{
    "name": "block-game-ts",
    "version": "1.1.0",
    "main": "index.js",
    "repository": "https://github.com/tdurtschi/tdurtschi-web.git",
    "author": "Teagan Durtschi <teagan@tdurtschi.com>",
    "license": "MIT",
    "scripts": {
        "build": "npm-run-all build-backend build-frontend",
        "build-backend": "npm run --prefix src/server-remote compile-ts",
        "build-frontend": "node build.js",
        "deploy": "./scripts/deploy.sh",
        "dev": "SERVER_PORT=9999 nf start",
        "dev-server": "ts-node src/server-remote/index.ts",
        "e2e": "CYPRESS_BASE_URL='http://localhost:3000' cypress open",
        "e2e:ci": "CYPRESS_BASE_URL='http://localhost:5000' start-server-and-test start http://localhost:5000 'cypress run'",
        "prettier": "prettier --write \"./**/*.(js|ts|tsx|scss)\"",
        "start": "npm run build && npm-run-all -p start-frontend start-backend",
        "start-backend": "npm run --prefix src/server-remote start",
        "start-frontend": "serve dist/",
        "test": "npm-run-all build-frontend test-unit e2e:ci",
        "test-unit": "DEBUG_PRINT_LIMIT=200 jest",
        "watch": "node build.js --watch"
    },
    "devDependencies": {
        "@testing-library/react": "^11.2.5",
        "@types/jest": "^26.0.19",
        "foreman": "^3.0.1",
        "jest": "^26.6.3",
        "jest-nyancat-reporter": "^2.0.0",
        "npm-run-all": "^4.1.5",
        "prettier": "^2.2.1",
        "start-server-and-test": "^1.12.1",
        "ts-jest": "^26.4.4",
        "webpack": "^5.10.0",
        "webpack-cli": "^4.2.0"
    },
    "dependencies": {
        "@types/react": "^17.0.0",
        "@types/react-dom": "^17.0.0",
        "@types/sockjs": "^0.3.33",
        "@types/sockjs-client": "^1.5.1",
        "browser-sync": "^2.26.14",
        "cypress": "^6.2.1",
        "esbuild": "^0.8.46",
        "react": "17.0.1",
        "react-dom": "17.0.1",
        "react-markdown": "^6.0.1",
        "sass": "^1.32.7",
        "serve": "^11.3.2",
        "sockjs": "^0.3.21",
        "sockjs-client": "^1.5.2",
        "ts-loader": "^8.0.11",
        "ts-node": "^10.2.1",
        "typescript": "^4.1.2"
    },
    "prettier": {
        "tabWidth": 4,
        "trailingComma": "none"
    }
}
